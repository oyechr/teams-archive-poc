{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.15/MicrosoftTeams.schema.json",
  "manifestVersion": "1.15",
  "id": "79b4a6ff-2517-4f02-b70e-ef31ab65677b",
  "version": "{{VERSION}}",
  "packageName": "{{PACKAGE_NAME}}",
  "developer": {
    "name": "Christopher Ã˜yen",
    "websiteUrl": "https://{{PUBLIC_HOSTNAME}}",
    "privacyUrl": "https://{{PUBLIC_HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{PUBLIC_HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "Archiver",
    "full": "Teams Chat Archiver"
  },
  "description": {
    "short": "Archive and manage your Teams chats with metadata and JSON preview.",
    "full": "This app allows users to archive their Teams chats, providing a way to manage chat history with metadata and a JSON preview."
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#D85028",
  "configurableTabs": [],
  "staticTabs": [
    {
      "entityId": "3b475d03-ce49-47d5-a0a9-61f40142cdad",
      "name": "Archive",
      "contentUrl": "https://{{PUBLIC_HOSTNAME}}/archiveTab/?name={loginHint}&tenant={tid}&theme={theme}",
      "scopes": [
        "personal"
      ]
    }
  ],
  "bots": [
    {
    "botId": "79b4a6ff-2517-4f02-b70e-ef31ab65677b",
    "scopes": ["personal", "team", "groupchat"],
    "supportsFiles": true,
    "isNotificationOnly": false
  }
  ],
  "connectors": [],
  "composeExtensions": [
  {
    "botId": "79b4a6ff-2517-4f02-b70e-ef31ab65677b",
    "canUpdateConfiguration": false,
    "commands": [
      {
        "id": "markForArchive",
        "type": "action",
        "title": "Flag for Archive",
        "context": ["message"],
        "description": "Send this message thread to the Archive app",
        "fetchTask": false
      }
    ]
  }
],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{{PUBLIC_HOSTNAME}}",
    "token.botframework.com"
  ],
  "showLoadingIndicator": true,
  "webApplicationInfo": {
    "id": "79b4a6ff-2517-4f02-b70e-ef31ab65677b",
    "resource": "{{TAB_APP_URI}}"
  }
}
